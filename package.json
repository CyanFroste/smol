{
  "name": "smol",
  "version": "1.0.1",
  "description": "A Very Minimalistic PHP Framework",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "ts": "webpack --mode production",
    "tsw": "webpack watch --mode development",
    "css": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/style.css --minify",
    "cssw": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/style.css --watch",
    "start": "cd public && php -S localhost:3000"
  },
  "author": "Cyan Froste",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "tailwindcss": "^3.1.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
