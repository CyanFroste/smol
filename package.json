{
  "name": "smol",
  "version": "1.0.0",
  "description": "A Very Minimalistic PHP Framework",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "watch:css": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/style.css --watch",
    "build:css": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/style.css --minify",
    "watch:ts": "webpack watch --mode development",
    "build:ts": "webpack --mode production"
  },
  "author": "Cyan Froste",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.1.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
